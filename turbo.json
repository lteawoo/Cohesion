{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", "build/**"], 
      "dependsOn": ["^build"] 
    },

    "@cohesion/web#build": {
      "outputs": ["dist/**"]
    },

    "@cohesion/backend#build": {
      "dependsOn": ["^build", "@cohesion/web#build"],
      "outputs": ["dist/**"]
    },

    "dev": {
      "cache": false,     
      "persistent": true 
    },
    "lint": {}
  }
}