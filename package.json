{
  "name": "cohesion",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "cd apps/server && bun --watch src/index.ts",
    "dev:server": "cd apps/server && bun --watch src/index.ts",
    "build": "cd apps/server && bun build src/index.ts --outdir dist",
    "build:exe": "cd apps/server && bun build src/index.ts --compile --outfile ../../dist/cohesion",
    "lint": "echo 'Lint not configured'",
    "test": "echo 'Tests not configured'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.2"
  }
}